@model JAM_BITES.Models.Producto

@{
    ViewData["Title"] = "Detalle del Producto";
}

<h1 style="color: #d62027;">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageURL" class="img-fluid" alt="@Model.Nombre"
            style="width: 620px; height: 520px; object-fit: cover;">
    </div>
    <div class="col-md-6">
        <h2>@Model.Nombre</h2>
        <p>@Model.Descripcion</p>
        <p><strong>Precio:</strong>S/. @Model.Precio.ToString("C")</p>
        <p><strong>Categoría:</strong> @Model.Categoria?.Nombre</p>
        <a asp-controller="Carrito" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-primary" style="background-color: #d62027; color: white; border-color: #d62027;">Agregar al
            Carrito</a>
        <a asp-action="Index" class="btn btn-secondary" style="background-color: white; color: #d62027; border-color: #d62027;">Volver al Catálogo</a>
    </div>
</div>