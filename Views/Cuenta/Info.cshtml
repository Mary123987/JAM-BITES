@{
  ViewData["Title"] = "Información de Cuenta";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Información de Cuenta</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<style>
  /*barra*/
  .list-group-item{
    background-color: #d62027;
    color: white;
    border-color: white;
  }
  .list-group a:hover{
    background-color: #f8cdce;
    color: #d62027;
  }

  /*contenido*/
  .form-container {
      flex: 1;
      padding: 20px;
    }

    h2 {
      color: #000000;
      margin-bottom: 10px;
    }

    .subtitle {
      color: #000000;
      margin-bottom: 30px;
    }

    .form-row {
      display: flex;
      gap: 20px;
      margin-bottom: 20px;
    }

    .form-group {
      flex: 1;
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
      color: #666;
    }

    .required {
      color: red;
    }

    .input-icon {
      position: relative;
    }

    .input-icon input,
    .input-icon select {
      width: 95%;
      padding: 8px 8px 8px 35px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .icon {
      position: absolute;
      left: 10px;
      top: 50%;
      transform: translateY(-50%);
    }

    .change-password {
      margin: 20px 0;
    }

    .change-password label {
      display: flex;
      align-items: center;
    }

    .change-password input[type="checkbox"] {
      margin-right: 10px;
    }

    .button-container {
      display: flex;
      justify-content: space-between;
      margin-top: 30px;
    }

    .btn1 {
      padding: 10px 40px;
      border: none;
      border-radius: 25px;
      cursor: pointer;
      background-color: red;
      color: white;
    }

    .required-text {
      color: red;
      font-size: 12px;
      margin-top: 20px;
    }

</style>
<body>
  <div class="container">
    <div class="row">
      <div class="col-3" >
        <br>
        <div class="list-group">
          <a href="~/Cuenta/Index" class="list-group-item list-group-item-action">Panel de Cuenta</a>
          <a href="~/Cuenta/Info" class="list-group-item list-group-item-action active" style="background-color: white; color: #d62027; border-color: #d62027;" aria-current="true">Información de Cuenta</a>
          <a href="~/Cuenta/Direccion" class="list-group-item list-group-item-action">Direcciones</a>
        </div>
        <br>
        <div class="d-grid gap-2 col-6 mx-auto">
          <a class="btn btn-primary" href="#" role="button"  style="align-items: center; background-color: white; color: #d62027; border-color: #d62027;">Cerrar Sesión</a>
        </div>
      </div>
      <div class="col-6">
        
        <div class="form-container">
          <h2>EDITAR LA INFORMACIÓN DE TU CUENTA</h2>
          <div class="subtitle">Información de Cuenta</div>
  
          <form>
            <div class="form-row">
              <div class="form-group">
                <label>Nombre <span class="required">*</span></label>
                <div class="input-icon">
                  <span class="icon">👤</span>
                  <input type="text" />
                </div>
              </div>
  
              <div class="form-group">
                <label>Apellido <span class="required">*</span></label>
                <div class="input-icon">
                  <span class="icon">👤</span>
                  <input type="text" />
                </div>
              </div>
            </div>
  
            <div class="form-group">
              <label>Correo Electrónico <span class="required">*</span></label>
              <div class="input-icon">
                <span class="icon">✉️</span>
                <input type="email" />
              </div>
            </div>
  
            <div class="form-row">
              <div class="form-group">
                <label>Tipo de Documento <span class="required">*</span></label>
                <div class="input-icon">
                  <span class="icon">📄</span>
                  <select>
                    <option>DNI</option>
                    <option>Pasaporte</option>
                    <option>CE</option>
                  </select>
                </div>
              </div>
  
              <div class="form-group">
                <label>Número de documento <span class="required">*</span></label>
                <div class="input-icon">
                  <span class="icon">🔢</span>
                  <input type="text" />
                </div>
              </div>
            </div>
  
            <div class="form-row">
              <div class="form-group">
                <label>Teléfono <span class="required">*</span></label>
                <div class="input-icon">
                  <span class="icon">📱</span>
                  <input type="tel" />
                </div>
              </div>
  
              <div class="form-group">
                <label>Fecha de nacimiento <span class="required">*</span></label>
                <div class="input-icon">
                  <span class="icon">📅</span>
                  <input type="date" />
                </div>
              </div>
            </div>
  
            <div class="change-password">
              <label> <input type="checkbox" /> Cambiar contraseña </label>
            </div>
  
            <div class="button-container">
              <button type="submit" class="btn1">Guardar</button>
              <button type="button" class="btn1">VOLVER</button>
            </div>
  
            <div class="required-text">* Campos obligatorios</div>
          </form>
        </div>
      </div>
    </div>
  </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>