@{
  ViewData["Title"] = "Panel de Cuenta";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Cuenta</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<style>
  .list-group-item{
    background-color: #d62027;
    color: white;
    border-color: white;
  }
  .list-group a:hover{
    background-color: #f8cdce;
    color: #d62027;
  }
  /*contenido*/
  .main-content {
    background-color: white;
    flex-grow: 1;
    padding: 20px;
  }

  .welcome {
    color: #000000;
    margin-bottom: 20px;
  }

  .description {
    color: #333;
    line-height: 1.6;
  }

  .help-link {
    float: right;
    color: #ff0000;
    text-decoration: none;
  }

  .help-link:hover {
    text-decoration: underline;
  }

  .section-title {
    color: #d62027;
    margin-bottom: 15px;
  }
        
    html, body {
            height: 100%; 
            margin: 0; 
            display: flex;
            flex-direction: column; 
    }

    main {
            flex: 1; 
    }

    .footer {
            background-color: #d62027;
            text-align: left;
            font-weight: bold;
            font-size: 1em;
            padding: 20px;
            color: white;
            width: 100%; 
            border-top: 1px solid white;
    }
    

</style>

<body>
  <div class="container">
    <div class="row">
      <div class="col-3" >
        <br>
        <div class="list-group">
          <a href="~/Cuenta/Index" class="list-group-item list-group-item-action active" style="background-color: white; color: #d62027; border-color: #d62027;" aria-current="true">Panel de Cuenta</a>
          <a href="~/Cuenta/Info" class="list-group-item list-group-item-action ">Información de Cuenta</a>
          <a href="~/Cuenta/Direccion" class="list-group-item list-group-item-action">Direcciones</a>
        </div>
        <br>
        <div class="d-grid gap-2 col-6 mx-auto">
          <a class="btn btn-primary" href="#" role="button"  style="align-items: center; background-color: white; color: #d62027; border-color: #d62027;">Cerrar Sesión</a>
        </div>
      </div>
        <div class="col-6">
            <div class="main-content">
                    <h2 class="section-title">PANEL DE MI CUENTA</h2>
                    <h3 class="welcome">¡Hola!</h3>

                    <p class="description">
                    Desde esta sección puedes ver tu actividad reciente en JAM BITES. También puedes revisar y 
                    editar la información de tu cuenta, así como las direcciones asociadas.
                    </p>
            </div>

        

        </div>
    </div>
  </div>

  <br>
   <br>
    <br>
     <br>
      <br>
   <br>
    <br>
     <br>
    
   
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>