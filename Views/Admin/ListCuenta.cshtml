@model JAM_BITES.ViewModel.CuentaViewModel

@{
    ViewData["Title"] = "List Cuenta - Admin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Cuenta.css" />
</head>
<body>
    <!-- Barra Lateral -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">JAM BITES</div>
        </div>

        <div class="sidebar-menu">
            <a href="~/Admin/Panel" class="menu-item activo">
                <i class="fas fa-home"></i>
                <span> Panel</span>
            </a>
            <a href="~/Admin/ListPedido" class="menu-item">
                <i class="fas fa-shopping-bag"></i>
                <span> Pedidos</span>
            </a>
            <a href="~/Admin/ListMenu" class="menu-item">
                <i class="fas fa-hamburger"></i>
                <span> Menú</span>
            </a>
            <a href="~/Admin/ListCuenta" class="menu-item">
                <i class="fas fa-users"></i>
                <span>Clientes</span>
            </a>
            <a href="~/Admin/ListContacto" class="menu-item">
                <i class="fas fa-chart-bar"></i>
                <span>Contacto</span>
            </a>
        </div>

        <div class="sidebar-footer">
            <a href="~/Admin/Index" class="menu-item">
                <span>Salir </span>
                <i class="fas fa-chevron-down"></i>
            </a>
        </div>
    </nav>

    <!-- Contenido Principal -->
    <div class="container">
        <div class="barra-superior">
            <h1 class="titulo-pagina">Lista De Clientes</h1>
            <div class="menu-usuario">
                <i class="fas fa-bell"></i>
                <i class="fas fa-cog"></i>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Contraseña</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListCuenta != null)
                    {
                        @foreach (var item in Model.ListCuenta)
                        {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Password)</td>
                                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
</body>

</html>