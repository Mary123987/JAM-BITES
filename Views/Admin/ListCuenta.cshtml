@model JAM_BITES.ViewModel.CuentaViewModel

@{
    ViewData["Title"] = "List Cliente - Admin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/List.css" />
</head>

<body>
    <button class="sidebar-toggle" id="sidebarToggle">
        <i class="fas fa-bars"></i>
    </button>

    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h2>JAM BITES</h2>
            </div>

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="~/Admin/Panel" class="nav-link">
                        <i class="fas fa-home"></i>
                        <span>Panel Inicial</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Admin/ListPedidos" class="nav-link">
                        <i class="fas fa-shopping-bag"></i>
                        <span>Pedidos</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Admin/ListMenu" class="nav-link">
                        <i class="fas fa-hamburger"></i>
                        <span>Menú</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Admin/ListCuenta" class="nav-link active">
                        <i class="fas fa-users"></i>
                        <span>Clientes</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Admin/ListContacto" class="nav-link">
                        <i class="fas fa-chart-line"></i>
                        <span>Contactos</span>
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-details">
                        <span class="mb-0" href="~/Admin/Index">Salir </span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Contenido Principal -->
        <div id="content" class="content">
            <div class="seccion-contenido">
                <div class="seccion-encabezado">
                    <h2 class="seccion-titulo">Lista de Clientes</h2>
                </div>

                <div class="contenedor-tabla">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Email</th>
                                <th>Contraseña</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListCuenta != null)
                            {
                                @foreach (var item in Model.ListCuenta)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Password)</td>
                                        <td>
                                            <div class="menu-acciones">
                                                <button class="boton boton-primario">Ver Detalles</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('active');
            document.getElementById('content').classList.toggle('active');
        });
    </script>
</body>

</html>