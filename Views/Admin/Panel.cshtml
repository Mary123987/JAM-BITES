@{
    ViewData["Title"] = "Panel Administrador";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Cuenta.css" />
</head>

<body>
    <!-- Barra Lateral -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">JAM BITES</div>
        </div>

        <div class="sidebar-menu">
            <a href="~/Admin/Panel" class="menu-item activo">
                <i class="fas fa-home"></i>
                <span> Panel</span>
            </a>
            <a href="~/Admin/ListPedido" class="menu-item">
                <i class="fas fa-shopping-bag"></i>
                <span> Pedidos</span>
            </a>
            <a href="~/Admin/ListMenu" class="menu-item">
                <i class="fas fa-hamburger"></i>
                <span> Menú</span>
            </a>
            <a href="~/Admin/ListCuenta" class="menu-item">
                <i class="fas fa-users"></i>
                <span>Clientes</span>
            </a>
            <a href="~/Admin/ListContacto" class="menu-item">
                <i class="fas fa-chart-bar"></i>
                <span>Contacto</span>
            </a>
        </div>

        <div class="sidebar-footer">
            <a href="~/Admin/Index" class="menu-item">
                <span>Salir </span>
                <i class="fas fa-chevron-down"></i>
            </a>
        </div>
    </nav>

    <!-- Contenido Principal -->
    <div class="container">
        <div class="barra-superior">
            <h1 class="titulo-pagina">Panel Administrador</h1>
            <div class="menu-usuario">
                <i class="fas fa-bell"></i>
                <i class="fas fa-cog"></i>
            </div>
        </div>

        <div class="contenedor-estadisticas">
            <div class="tarjeta-estadistica">
                <div class="tarjeta-encabezado">
                    <div>
                        <div class="tarjeta-titulo">Pedidos Totales</div>
                        <div class="tarjeta-valor">1,254</div>
                    </div>
                    <i class="fas fa-shopping-bag tarjeta-icono"></i>
                </div>
            </div>
            <div class="tarjeta-estadistica">
                <div class="tarjeta-encabezado">
                    <div>
                        <div class="tarjeta-titulo">Clientes Activos</div>
                        <div class="tarjeta-valor">847</div>
                    </div>
                    <i class="fas fa-users tarjeta-icono"></i>
                </div>
            </div>
            <div class="tarjeta-estadistica">
                <div class="tarjeta-encabezado">
                    <div>
                        <div class="tarjeta-titulo">Productos en Menú</div>
                        <div class="tarjeta-valor">36</div>
                    </div>
                    <i class="fas fa-hamburger tarjeta-icono"></i>
                </div>
            </div>
        </div>

        <div class="seccion-contenido">
            <div class="seccion-encabezado">
                <h2 class="seccion-titulo">Pedidos Recientes</h2>
            </div>
            <div class="contenedor-tabla">
                <table>
                    <thead>
                        <tr>
                            <th>Número de Pedido</th>
                            <th>Cliente</th>
                            <th>Productos</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#12345</td>
                            <td>Juan Pérez</td>
                            <td>2x Hamburguesa Clásica, 1x Papas</td>
                            <td>$25.98</td>
                            <td>
                                <span class="estado estado-completado">Completado</span>
                            </td>
                            <td>
                                <div class="menu-acciones">
                                    <button class="boton boton-primario">Ver Detalles</button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>#12344</td>
                            <td>María González</td>
                            <td>1x Hamburguesa de Pollo, 1x Refresco</td>
                            <td>$18.99</td>
                            <td>
                                <span class="estado estado-preparando">En Preparación</span>
                            </td>
                            <td>
                                <div class="menu-acciones">
                                    <button class="boton boton-primario">Ver Detalles</button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
</body>

</html>