@model JAM_BITES.ViewModel.CategoriaProductoViewModel

@{
  ViewData["Title"] = "Crear Producto";
  Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="~/css/List.css" />
</head>

<body>
  <button class="sidebar-toggle" id="sidebarToggle">
    <i class="fas fa-bars"></i>
  </button>

  <div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar">
      <div class="sidebar-header">
        <h2>JAM BITES</h2>
      </div>

      <ul class="nav flex-column">
        <li class="nav-item">
          <a href="~/Admin/Panel" class="nav-link">
            <i class="fas fa-home"></i>
            <span>Panel Inicial</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="~/Admin/ListPedidos" class="nav-link">
            <i class="fas fa-shopping-bag"></i>
            <span>Pedidos</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="~/Admin/ListMenu" class="nav-link">
            <i class="fas fa-hamburger"></i>
            <span>Menú</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="~/Admin/ListCuenta" class="nav-link active">
            <i class="fas fa-users"></i>
            <span>Clientes</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="~/Admin/ListContacto" class="nav-link">
            <i class="fas fa-chart-line"></i>
            <span>Contactos</span>
          </a>
        </li>
      </ul>

      <div class="sidebar-footer">
        <div class="user-info">
          <div class="user-details">
            <span class="mb-0" href="~/Admin/Index">Salir </span>
            <i class="fas fa-chevron-down"></i>
          </div>
        </div>
      </div>
    </nav>

    <!-- Contenido Principal -->
    <div id="content" class="content">
      <div class="seccion-contenido">
        <br>
        <div class="containerC">
          <h1 class="text-center mb-4 rounded-top">Formulario de Producto</h1>
          <div class="row justify-content-center">
            <div class="col-md-6">
              <form asp-controller="Admin" asp-action="CrearProducto" method="post">
                <div class="form-group">
                  <label asp-for="FormProducto.Nombre" class="control-label">Nombre:</label>
                  <input asp-for="FormProducto.Nombre" class="form-control" />
                </div>
                <br>
                <div class="form-group">
                  <label asp-for="FormProducto.Descripcion" class="control-label">Descripcion:</label>
                  <input asp-for="FormProducto.Descripcion" class="form-control" />
                </div>
                <br>
                <div class="form-group">
                  <label asp-for="FormProducto.Precio" class="control-label">Precio:</label>
                  <input asp-for="FormProducto.Precio" class="form-control" type="number" step="0.01" />
                </div>
                <br>
                <div class="form-group">
                  <label asp-for="FormProducto.ImageURL" class="control-label">Imagen:</label>
                  <input asp-for="FormProducto.ImageURL" class="form-control">
                </div>
                <br>
                <div class="form-group">
                  <label asp-for="FormProducto.Categoria" class="control-label">Categoria</label>
                  <select asp-for="FormProducto.Categoria" class="form-control">
                        <option value="1">Hamburguesas</option>
                        <option value="2">Combos</option>
                        <option value="3">Complementos</option>
                        <option value="3">Bebidas</option>
                    </select>
                </div><br>
                <div class="form-group">
                    <label asp-for="FormProducto.FechaCreacion" class="control-label">Fecha de Creación:</label>
                    <input asp-for="FormProducto.FechaCreacion" type="date" class="form-control" required />
                </div><br>

                <div class="form-group text-center">
                  <button type="submit" class="btn btn-primary" style="background-color: #d62027; color: white">
                    Crear Producto
                  </button>
                </div><br>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById('sidebarToggle').addEventListener('click', function () {
      document.getElementById('sidebar').classList.toggle('active');
      document.getElementById('content').classList.toggle('active');
    });
  </script>
  <script>
    // Asegurarse de que la fecha por defecto sea la fecha actual
    document.addEventListener('DOMContentLoaded', function () {
      var today = new Date().toISOString().split('T')[0];
      document.querySelector('input[type="date"]').value = today;
    });
  </script>
</body>

</html>