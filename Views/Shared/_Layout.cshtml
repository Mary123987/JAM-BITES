<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] JAM BITES</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JAM_BITES.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/img/jam1.png" type="image/x-icon" />

    <style>

        .navbar {
            padding: 7px 10px; 
            background-color: #d62027;
        }
        .navbar-brand {
            font-weight: 900;
            font-size: 2rem;
            letter-spacing: 2px;
            color: #fff !important;
            text-shadow: 1px 1px 8px #b5161e33;
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 0;
        }
        .navbar-brand img {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            object-fit: cover;
            margin-right: 8px;
        }

        .navbar-nav .nav-link {
            color: #FFFFFF !important; 
            font-size: 1.0rem; 
            padding: 10px 15px;
            transition: background-color 0.3s, color 0.3s; 
        } 

        .navbar-nav .nav-link:hover {
            background-color: #b5161e; 
            color: #FFFFFF !important; 
            border-radius: 8px; 
        }

         .navbar-toggler {
        border: none;
        }

         .navbar-toggler-icon {
        filter: invert(1); 
         }


    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3"
            style="background-color: #d62027;">
            <div class="container-fluid">
                 <a class="navbar-brand mb-0 h1" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/jam1.png" alt="Logo JAM BITES" />
                    JAM BITES
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home"
                                asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Catalogo"
                                asp-action="Index">Men√∫</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Contacto"
                                asp-action="Index">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Juego" asp-action="Index">Ven
                                Juega</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Noticias"
                                asp-action="Index">Noticias</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br>
    
    <footer class="border-top footer text-muted" style="background-color: #d62027;" text-align: left; font-weight: bold;
        font-size: 1em; margin-top: auto; padding: 20px;">
        <div class="container d-flex justify-content-between align-items-center" style="color: #FFFFFF;">
            <div>
                <h3 style="font-weight: 900; font-size: 2.5em;">JAM BITES</h3>
            </div>
            <div class="payment-options">
                <h4 style="font-size: 1.5em; font-weight: bold;">Formas de Pago</h4>
                <img src="https://kcuscotours.com/wp-content/uploads/2020/01/pagos-visa.png" alt="Visa"
                    style="width: 250px; height: auto;">
            </div>
        </div>
        <br>
        <div class="container" style="text-align: center; color:white;">
            &copy; 2024 - Todos los derechos reservados.
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_ChatbotWidget")
</body>

</html>