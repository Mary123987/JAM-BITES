@model JAM_BITES.ViewModel.CuentaViewModel

@{
    ViewData["Title"] = "Home Page";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Roboto', sans-serif;
    }

    body {
        background-color: #f8f9fa;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 100vh;
    }

    .main-content {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px 0;
    }

    .login-container {
        background-color: #ffffff;
        border: 1px solid #dee2e6;
        border-radius: 15px;
        padding: 40px;
        width: 500px;
        text-align: center;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .title-section {
        background-color: #dc3545; /* Rojo oscuro */
        padding: 20px;
        color: #ffffff;
        border-radius: 10px 10px 0 0;
        font-size: 1.8em;
        margin-bottom: 25px;
    }

    .title-section h2 {
        margin: 0;
    }

    .login-container p {
        margin: 15px 0;
        color: #495057;
    }

    form input {
        display: block;
        width: 100%;
        padding: 15px;
        margin: 15px 0;
        border: 1px solid #ced4da;
        border-radius: 10px;
        font-size: 1em;
    }

    .btn-common {
        padding: 15px; /* Altura uniforme */
        width: 100%; /* Ancho uniforme */
        border: none;
        border-radius: 10px;
        font-size: 1.2em; /* Tamaño del texto */
        cursor: pointer;
        transition: background-color 0.3s ease;
        color: white;
    }

    .btn-create-account {
        background-color: #dc3545; /* Rojo oscuro */
    }

    .btn-create-account:hover {
        background-color: #b52a37;
    }

    .btn-existing-account {
        background-color: #eba728; /* Amarillo naranjoso */
        margin-top: 15px;
    }

    .btn-existing-account:hover {
        background-color: #e5a00b;
    }

    .error-message {
        color: red;
        font-size: 1em;
        margin-top: 10px;
    }

    .success-message {
        color: green;
        font-size: 1em;
        margin-top: 10px;
    }

    
    html, body {
        height: 100%; 
        margin: 0; 
        display: flex;
        flex-direction: column; 
    }

    main {
        flex: 1; 
    }

    .footer {
        background-color: #d62027;
        text-align: left;
        font-weight: bold;
        font-size: 1em;
        padding: 20px;
        color: white;
        width: 100%; 
        border-top: 1px solid white;
    }
</style>

<div class="main-content">
    <div class="login-container">
        <div class="title-section">
            <h2>Crear Cuenta JAM</h2>
        </div>
        <p>¡Completa el formulario para crear tu cuenta!</p>

        <form asp-controller="Register" asp-action="CrearCuenta" method="post">
            <input asp-for="FormCuenta.Email" type="email" placeholder="Correo Electrónico" required>
            <input asp-for="FormCuenta.Password" type="password" placeholder="Contraseña" required>
            <button type="submit" class="btn-common btn-create-account">Crear Cuenta</button>
        </form>

        <form action="@Url.Action("Index", "Login")" method="get">
            <button type="submit" class="btn-common btn-existing-account">Ya tengo una cuenta</button>
        </form>

        @if (ViewBag.ErrorMessage != null)
        {
            <p class="error-message">@ViewBag.ErrorMessage</p>
        }

        @if (ViewBag.SuccessMessage != null)
        {
            <p class="success-message">@ViewBag.SuccessMessage</p>
        }
    </div>
</div>
