@model JAM_BITES.Models.Cuenta

@{
    ViewData["Title"] = "Home Page";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Roboto', sans-serif;
    }

    body {
        background-color: #f8f9fa;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 100vh;
    }

    .main-content {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px 0;
    }

    .login-container {
        background-color: #ffffff;
        border: 1px solid #dee2e6;
        border-radius: 15px;
        padding: 30px; /* Reducido */
        width: 500px;
        text-align: center;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .login-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .title-section {
        background-color: #dc3545;
        padding: 20px;
        color: #ffffff;
        border-radius: 10px 10px 0 0;
        font-size: 1.8em;
        margin-bottom: 25px;
    }

    .title-section h2 {
        margin: 0;
    }

    .login-container p {
        margin: 15px 0;
        color: #495057;
    }

    form input {
        display: block;
        width: 100%;
        padding: 10px; /* Reducido */
        margin: 10px 0; /* Reducido */
        border: 1px solid #ced4da;
        border-radius: 10px;
        font-size: 1em;
    }

    .btn-common {
        padding: 10px; /* Reducido */
        width: 100%;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        margin: 10px 0; /* Reducido */
        font-size: 1em; /* Ajustado */
        transition: background-color 0.3s ease;
        color: white;
    }

    .btn-login {
        background-color: #dc3545;
    }

    .btn-login:hover {
        background-color: #b52a37;
    }

    .btn-create-account {
        background-color: #f4a261;
    }

    .btn-create-account:hover {
        background-color: #e07a3b;
    }

    .social-login-text {
        margin-top: 15px; /* Reducido */
        font-size: 1.1em;
        color: #495057;
    }

    .social-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
    }

    .social-buttons button {
        padding: 10px;
        width: 48%;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-size: 0.9em;
        transition: background-color 0.3s ease;
        color: white;
    }

    .btn-google {
        background-color: #4fc3f7;
    }

    .btn-google:hover {
        background-color: #29b6f6;
    }

    .btn-facebook {
        background-color: #154360;
    }

    .btn-facebook:hover {
        background-color: #0d2a4c;
    }

    html, body {
        height: 100%; 
        margin: 0; 
        display: flex;
        flex-direction: column; 
    }

    main {
        flex: 1; 
    }

    .footer {
        background-color: #d62027;
        text-align: left;
        font-weight: bold;
        font-size: 1em;
        padding: 20px;
        color: white;
        width: 100%; 
        border-top: 1px solid white;
    }
</style>

<div class="main-content">
    <div class="login-container">
        <div class="title-section">
            <h2>Ingresa a tu cuenta JAM</h2>
        </div>
        <p>¡Si tienes una cuenta con nosotros, ingresa tus datos para comenzar!</p>

        <form asp-controller="Login" asp-action="Ingresar" method="post">
            <div class="form-group mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
            <button type="submit" class="btn-common btn-login">Ingresar</button>
        </form>

        <form action="@Url.Action("Index","Register")" method="get">
            <button type="submit" class="btn-common btn-create-account">Crear cuenta</button>
        </form>

        <p class="social-login-text">Inicia también a través de:</p>

        <div class="social-buttons">
            <button class="btn-google">Google</button>
            <button class="btn-facebook">Facebook</button>
        </div>
    </div>
</div>
