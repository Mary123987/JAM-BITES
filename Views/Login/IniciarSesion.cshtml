@model JAM_BITES.Models.Cuenta

@{
    ViewData["Title"] = "Home Page";
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Roboto', sans-serif;
    }

    body {
        background-color: #f8f9fa;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 100vh;
    }

    .main-content {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px 0;
    }

    .login-container {
        background-color: #ffffff;
        border: 1px solid #dee2e6;
        border-radius: 15px;
        padding: 40px;
        width: 500px;
        /* Contenedor más ancho */
        text-align: center;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .login-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .title-section {
        background-color: #dc3545;
        /* Rojo oscuro */
        padding: 20px;
        color: #ffffff;
        border-radius: 10px 10px 0 0;
        font-size: 1.8em;
        margin-bottom: 25px;
    }

    .title-section h2 {
        margin: 0;
    }

    .login-container p {
        margin: 15px 0;
        color: #495057;
    }

    form input {
        display: block;
        width: 100%;
        padding: 15px;
        margin: 15px 0;
        border: 1px solid #ced4da;
        border-radius: 10px;
        font-size: 1em;
    }

    .btn-login {
        background-color: #eba728;
        /* Rojo */
        color: white;
        padding: 15px;
        width: 100%;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        margin: 20px 0;
        font-size: 1.2em;
        transition: background-color 0.3s ease;
    }

    .btn-login:hover {
        background-color: #e24b0f;
    }

    .create-account {
        display: block;
        color: #007bff;
        /* Azul */
        margin: 20px 0;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.1em;
    }

    .create-account:hover {
        text-decoration: underline;
    }

    .social-login-text {
        margin-top: 25px;
        font-size: 1.1em;
        color: #495057;
    }

    .social-buttons button {
        padding: 15px;
        width: 100%;
        border: none;
        border-radius: 10px;
        margin: 10px 0;
        cursor: pointer;
        font-size: 1.2em;
        transition: background-color 0.3s ease;
    }

    .social-buttons button:hover {
        opacity: 0.85;
    }

    .btn-google {
        background-color: #d67167;
        color: white;
    }

    .btn-facebook {
        background-color: #748ab8;
        color: white;
    }
</style>

<div class="main-content">
    <div class="login-container">
        <div class="title-section">
            <h2>Ingresa a tu cuenta JAM</h2>
        </div>
        <p>¡Si tienes una cuenta con nosotros, ingresa tus datos para comenzar!</p>

        <form asp-controller="Login" asp-action="Ingresar" method="post">
            <div class="form-group mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
            <button type="submit" class="btn btn-primary btn-block w-100">Ingresar</button>
        </form>

        <form action="@Url.Action("Index","Register")" method="get">
            <button>Crear cuenta</button>
        </form>

        <p class="social-login-text">Inicia también a través de:</p>

        <div class="social-buttons">
            <button class="btn-google">Inicia con Google</button>
            <button class="btn-facebook">Inicia con Facebook</button>
        </div>
    </div>
</div>