@model JAM_BITES.ViewModel.ContactoViewModel
@{
  ViewData["Title"] = "Contacto";
}

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
  }

  .containerC {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f9f9f9;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
  }

  .text-center {
    text-align: center;
  }

  .mb-4 {
    margin-bottom: 20px;
  }

  .row {
    margin-left: -15px;
    margin-right: -15px;
  }

  .col-md-6 {
    flex: 0 0 50%;
    max-width: 50%;
    padding: 0 15px;
  }

  form {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 6px;
    color: #d62027;
    font-weight: bold;
  }

  h1 {
    font-size: 24px;
    margin-bottom: 20px;
    font-weight: bold;
    font-size: 2em;
    color: #d62027;
  }

  .btn {
    font-weight: bold;
    border-color: #d62027;
  }
</style>
<br>
<div class="containerC">
  <h1 class="text-center mb-4 rounded-top">Formulario de Contacto</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form asp-controller="Contacto" asp-action="Enviar" method="post">
        <div class="form-group">
          <label asp-for="FormContacto.Nombre" class="control-label">Nombre:</label>
          <input asp-for="FormContacto.Nombre" class="form-control" />
        </div>
        <br />
        <div class="form-group">
          <label asp-for="FormContacto.Email" class="control-label">Correo:</label>
          <input asp-for="FormContacto.Email" class="form-control" type="email" />
        </div>
        <br />
        <div class="form-group">
          <label asp-for="FormContacto.Telefono" class="control-label">Telefono:</label>
          <input asp-for="FormContacto.Telefono" class="form-control" type="tel" pattern="[0-9]{9}"/>
        </div>
        <br />
        <div class="form-group">
          <label asp-for="FormContacto.Mensaje" class="control-label">Mensaje:</label>
          <textarea asp-for="FormContacto.Mensaje" class="form-control"></textarea>
        </div>
        <br />

        <div class="form-group text-center">
          <button type="submit" class="btn btn-primary" style="background-color: #d62027; color: white">
            Enviar
          </button>
        </div>
      </form>
      <h1>@ViewData["Message"]</h1>
    </div>
  </div>
</div>
