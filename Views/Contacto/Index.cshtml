@model JAM_BITES.ViewModel.ContactoViewModel
@{
  ViewData["Title"] = "Contacto";
}

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
  }

  .containerC {
    max-width: 500px; 
    margin: 0 auto;
    padding: 20px; 
    background-color: #f9f9f9;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    border-radius: 10px;
  }

  .text-center {
    text-align: center;
  }

  .mb-4 {
    margin-bottom: 20px; 
  }

  .form-group {
    margin-bottom: 15px; 
  }

  .form-control {
    width: 100%; 
    padding: 8px; 
    border-radius: 5px; 
    border: 1px solid #ccc; 
    box-sizing: border-box; 
  }

  .form-control:focus {
    border-color: #d62027; 
    box-shadow: 0 0 5px rgba(214, 32, 39, 0.5); 
    outline: none; 
  }

  h1 {
    font-size: 2em; 
    margin-bottom: 20px;
    color: #d62027;
    font-weight: bold;
  }

  .control-label {
    color: #d62027; 
    font-weight: bold; 
  }

  .btn {
    font-weight: bold;
    background-color: #d62027; 
    color: white;
    border-radius: 5px; 
    padding: 10px 20px; 
    border: none; 
    cursor: pointer; 
    transition: background-color 0.3s; 
  }

  .btn:hover {
    background-color: #98110C ; 
    transform: scale(1.05); 
  }

   .footer {
      background-color:#d62027;
      text-align:left;
      font-weight:bold;
      font-size:1em;
      padding:20px;
      color:white;
      width:100%; 
      border-top:1px solid white;
   }
   
   html, body {
      height:100%; 
      margin:0; 
      display:flex; 
      flex-direction:column; 
   }

   main {
      flex:1; 
   }
</style>

<br>

<div class="containerC">
<br>
  <h1 class="text-center mb-4 rounded-top">Contáctanos</h1>
  
      <form asp-controller="Contacto" asp-action="Enviar" method="post">
        <div class="form-group">
          <label asp-for="FormContacto.Nombre" class="control-label">Nombre:</label>
          <input asp-for="FormContacto.Nombre" class="form-control" required/>
        </div>
        
        <div class="form-group">
          <label asp-for="FormContacto.Email" class="control-label">Correo:</label>
          <input asp-for="FormContacto.Email" class="form-control" type="email" required/>
        </div>
        
        <div class="form-group">
          <label asp-for="FormContacto.Telefono" class="control-label">Teléfono:</label>
          <input asp-for="FormContacto.Telefono" class="form-control" type="tel" pattern="[0-9]{9}" required/>
        </div>
        
        <div class="form-group">
          <label asp-for="FormContacto.Mensaje" class="control-label">Mensaje:</label>
          <textarea asp-for="FormContacto.Mensaje" class="form-control" rows="3" required></textarea> <!-- Menor altura -->
        </div>

        <div class="form-group text-center">
          <button type="submit" class="btn">
            Enviar
          </button>
        </div>
      </form>
      <h1>@ViewData["Message"]</h1>
    
</div>